{
  "extends": "../../config/tsconfig/app.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "composite": true,
    "importHelpers": true,
    "noEmit": true,
    "rootDir": "src",
    "types": ["chrome"]
  }
}
